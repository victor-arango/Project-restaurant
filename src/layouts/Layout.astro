---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<style>
		 .preloader {
            width: 100%;
            height: 100%;
            position: fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2222;
            top: 0;
            bottom: 0;
            background-color: #fff;
        }
	</style>
	<body>
		<div class="preloader">
			<script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script> 

    <dotlottie-player src="https://lottie.host/d13d7bf9-d422-44dd-bd1b-fc8de9da1dee/kyprljG9HL.json" background="transparent" speed="1" style="width: 800px; height: 800px;" loop autoplay></dotlottie-player>
        </div>
	<Header />
	</body>



	<script is:inline>
		
	window.onload = function(){
				setTimeout(function() {
					document.querySelector(".preloader").style.display = "none";
				}, 
				5000
				); 
			}
		</script>
		
</html>
